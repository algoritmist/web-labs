<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- Servlets-->
    <servlet>
        <servlet-name>AreaCheckServlet</servlet-name>
        <servlet-class>
            org.algoritmist.weblabs.lab2.model.AreaCheckServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AreaCheckServlet</servlet-name>
        <url-pattern>./areaCheck</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>
            org.algoritmist.weblabs.lab2.controller.ControllerServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>./check</url-pattern>
    </servlet-mapping>
    <!--Filters-->
    <filter>
        <filter-name>ControllerFilter</filter-name>
        <filter-class>org.algoritmist.weblabs.lab2.controller.ControllerServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ControllerFilter</filter-name>
        <url-pattern>./check</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AreaFilter</filter-name>
        <filter-class>org.algoritmist.weblabs.lab2.model.AreaCheckServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AreaFilter</filter-name>
        <url-pattern>./areaCheck</url-pattern>
    </filter-mapping>
</web-app>